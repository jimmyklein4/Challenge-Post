<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.tudev.challengepost">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">

        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:label="@string/challenges">
        </activity>

        <activity
            android:name=".RegistrationActivity"
            android:label="@string/register">
        </activity>

        <activity
            android:name=".FeedView"
            android:label="@string/feed">
        </activity>

        <activity android:name=".ChallengeItemView"
            android:label="@string/challege_discription">
        </activity>

        <activity android:name=".UserActivity"
            android:label="@string/username">
        </activity>
    </application>

</manifest>
